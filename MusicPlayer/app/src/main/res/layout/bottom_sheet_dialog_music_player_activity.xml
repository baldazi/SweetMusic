<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color">

    <LinearLayout
        android:id="@+id/add_to_a_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/add_to_a_playlist_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/add_to_a_playlist"
            android:src="@drawable/ic_baseline_add_24"/>

        <TextView
            android:id="@+id/add_to_a_playlist_text"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_to_a_playlist"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/modify_music_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/modify"
            android:src="@drawable/ic_baseline_edit_24"/>

        <TextView
            android:id="@+id/modify_music_text"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/modify"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>