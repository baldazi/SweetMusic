<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_color"
    tools:context=".MainActivity"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlist_cover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:shapeAppearance="@style/softRoundCorner"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="Album Cover"
        android:src="@drawable/icone_musique" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        android:layout_marginStart="4dp">


        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the Playlist"
            android:singleLine="true"
            android:textColor="@color/third_color"
            >
        </TextView>

        <TextView
            android:id="@+id/number_of_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Songs"
            android:singleLine="true"
            android:textColor="@color/third_color">

        </TextView>
    </LinearLayout>
</LinearLayout>