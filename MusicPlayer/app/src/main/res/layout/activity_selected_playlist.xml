<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".SelectedPlaylistActivity">

    <LinearLayout
        android:id="@+id/titleMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_color">

        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="@string/app_name">

        </TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playlist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="PLAYLIST NAME"
                android:textColor="@color/third_color"
                android:textSize="20sp">

            </TextView>

            <ImageView
                android:id="@+id/add_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_add_24">

            </ImageView>


        </RelativeLayout>

        <android.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/search_view_shape"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:queryHint="Search a specific music">
        </android.widget.SearchView>

        <Button
            android:id="@+id/shuffle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:text="Shuffle"
            android:textColor="@color/third_color"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            >
        </Button>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/playlists"
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_below="@+id/titleMenu"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_playlist_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_color"
            android:visibility="visible" />

        <TextView
            android:id="@+id/no_playlists_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/secondary_color"
            android:text="NO PLAYLISTS FOUND"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone">
        </TextView>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bottom_infos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/playlists"
        android:background="@color/primary_color">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/album_cover_info"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/icone_musique">

        </ImageView>

        <TextView
            android:id="@+id/no_song_playing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="NO SONG IS PLAYING"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/info_song_playing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/song_title_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Name of the Song"
                    android:ellipsize="marquee"
                    android:layout_centerVertical="true"
                    android:textColor="@color/third_color">

                </TextView>


                <ImageView
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_previous_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/song_title_info"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_next_24"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/pause_play"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/pause_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/previous"
                    android:src="@drawable/ic_baseline_pause_circle_outline_24">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>