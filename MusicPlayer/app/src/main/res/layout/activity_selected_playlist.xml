<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".SelectedPlaylistActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/michael" />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/cover"
            android:layout_alignEnd="@id/cover"
            android:layout_alignBottom="@id/cover"
            android:paddingStart="10dp"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:text="PLAYLIST NAME"
            android:textColor="@color/third_color"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_panel_shape"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="-25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/modify_playlist"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/third_color" />

        <ImageView
            android:id="@+id/add_songs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_add_24"
            app:tint="@color/third_color" />

        <ImageView
            android:id="@+id/shuffle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_shuffle_24"
            app:tint="@color/third_color" />

    </LinearLayout>

    <android.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/search_view_shape"
        app:queryHint="Search a specific music"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/playlists"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_playlist_recycler_view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/recycler_view_shape"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_infos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/playlists"
        android:gravity="bottom"
        android:background="@color/primary_color">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/album_cover_info"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/icone_musique"
            android:layout_marginStart="5dp">

        </ImageView>

        <TextView
            android:id="@+id/no_song_playing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="NO SONG IS PLAYING"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/info_song_playing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/song_title_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Name of the Song"
                    android:textColor="@color/third_color">

                </TextView>


                <ImageView
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_previous_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/song_title_info"
                    android:layout_marginStart="20dp">
                </ImageView>

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_next_24"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/pause_play"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/pause_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/previous"
                    android:src="@drawable/ic_baseline_pause_circle_outline_24">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>