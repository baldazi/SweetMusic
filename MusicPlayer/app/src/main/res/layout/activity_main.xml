<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_color">

        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="@string/app_name">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playlists"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                android:backgroundTint="@color/secondary_color"
                android:text="Playlists"
                android:textColor="@color/third_color"
                android:textSize="11sp">

            </Button>

            <Button
                android:id="@+id/likes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                android:backgroundTint="@color/secondary_color"
                android:text="Favorites"
                android:textColor="@color/third_color"
                android:textSize="11sp">

            </Button>

            <ImageButton
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:backgroundTint="@color/secondary_color"
                android:text=""
                android:src="@drawable/ic_baseline_arrow_downward_24">

            </ImageButton>
        </LinearLayout>

        <android.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/search_view_shape"
            android:layout_margin="10dp"
            app:queryHint="Search a specific music">
        </android.widget.SearchView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_color"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/no_songs_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/secondary_color"
            android:text="NO SONGS FOUND"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_infos"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:background="@color/primary_color">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/album_cover_info"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/icone_musique">

        </ImageView>

        <TextView
            android:id="@+id/no_song_playing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/third_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="NO SONG IS PLAYING"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/info_song_playing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/song_title_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Name of the Song"
                    android:textColor="@color/third_color">

                </TextView>


                <ImageView
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_previous_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/song_title_info"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_skip_next_24"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/pause_play"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/pause_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/previous"
                    android:src="@drawable/ic_baseline_pause_circle_outline_24">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>